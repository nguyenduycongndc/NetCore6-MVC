    <script src="~/src/plugins/bootstrap/popper.min.js" asp-append-version="true"></script>


</head>
<body>
    <div id="preloader" style="display: none; z-index: 1; position: absolute; background-color: rgba(0, 0, 0, 0.5); inset: 0px; ">
        <div class="loadspin" style="position: absolute; width: 5rem; height: 10rem; top: 50%; margin: 0 auto; left: 0; right: 0; ">
            <div class="spinner-border" role="status">
            </div>
        </div>
    </div>
    <div class="header" style="z-index:10">
        @{
            await Html.RenderPartialAsync("_TopNavigation.cshtml");
        }
    </div>
    <!-- Menu Left-->
    @{
        await Html.RenderPartialAsync("_MenuLeftRender.cshtml");
    }
    <div class="header-white sidebar-dark" id="body-root">
        @RenderBody()
    </div>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)


</body>
</html>
